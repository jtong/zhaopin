= form_for @my_question do |f|
  - if @my_question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@my_question.errors.count, "error")} prohibited this my_question from being saved:"
      %ul
        - @my_question.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :my_exam
    = f.text_field :my_exam
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.label :answer
    = f.text_field :answer
  .field
    = f.label :user_post
    = f.text_field :user_post
  .actions
    = f.submit 'Save'
