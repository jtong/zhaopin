.header
  .container.clearfix
    %ul.top-nav
      %li
        = "开始时间："
        %span#start_time
      %li= "总共#{@my_exam.my_questions.count}道题"
      %li= "已作答#{@my_exam.current_question_index}道题"
:javascript
  var start_date = new Date(gon.start_time_in_sec * 1000)
  var left_seconds = gon.left_seconds
  
  $("#start_time").text(format_date(start_date))
  window.setTimeout("exam_timeout();", left_seconds * 1000)

  function format_date (date) {
    return date.format("yyyy-MM-dd hh:mm:ss");
  }

  function exam_timeout () {
    alert("time out")
  }
