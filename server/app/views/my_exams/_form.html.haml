= form_for @my_exam do |f|
  - if @my_exam.errors.any?
    #error_explanation
      %h2= "#{pluralize(@my_exam.errors.count, "error")} prohibited this my_exam from being saved:"
      %ul
        - @my_exam.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :score
    = f.text_field :score
  .field
    = f.label :time_cost
    = f.number_field :time_cost
  .actions
    = f.submit 'Save'
