= form_for @my_posted_kata do |f|
  - if @my_posted_kata.errors.any?
    #error_explanation
      %h2= "#{pluralize(@my_posted_kata.errors.count, "error")} prohibited this my_posted_kata from being saved:"
      %ul
        - @my_posted_kata.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :kata
    = f.text_field :kata
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :desc
    = f.text_field :desc
  .actions
    = f.submit 'Save'
