= form_for @kata do |f|
  - if @kata.errors.any?
    #error_explanation
      %h2= "#{pluralize(@kata.errors.count, "error")} prohibited this kata from being saved:"
      %ul
        - @kata.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :desc
    = f.text_field :desc
  .field
    = f.label :language
    = f.text_field :language
  .actions
    = f.submit 'Save'
