.question_content= content
.control-group#answer1
  %label.control-label 几点?
  .controls
    %input#hour_answer(type="number")
.control-group#answer1
  %label.control-label 几分?
  .controls
    %input#minute_answer(type="number")

:javascript
  function prepare_for_submit()
  {
    var result = [];
    result.push($("#hour_answer").val());
    result.push($("#minute_answer").val());
    return result.join(",");
  }